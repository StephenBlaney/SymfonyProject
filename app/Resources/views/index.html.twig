{% extends '_base.html.twig' %}

{% block pageTitle %}home page{% endblock %}

{% block body %}

    {% set default_colours = 'no' %}

    {% set colours = app.session.get('colours') %}

    {% if colours is null %}
        {% set default_colours = 'yes' %}
        {% set colours = {
        'foreground': 'blue',
        'background': 'pink'
        }
        %}
    {% endif %}
    
    <h1>welcome to home page</h1>

    <hr>
    <ul>

        <li>
            <a href="{{ path('homepage') }}">back to home page</a>
        </li>

        <li>
            <a href="http://symfony.com/doc/current/page_creation.html">getting started (on the Symfony website)</a>
        </li>
    </ul>

    <p>
        I am the home page ...
    </p>

    <p>
        my name is {{ name }}
    </p>

    <hr>

    {{ dump() }}
{% endblock %}